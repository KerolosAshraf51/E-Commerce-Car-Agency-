@model CarAgency.ViewModels.ClientPurchaseViewModel

@{
    ViewData["Title"] = "Client Purchase";
}

<div class="container my-5">
    <div class="text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <p class="lead">Retrieve client purchase details by entering the client ID.</p>
    </div>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="ClientPurchase">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Id" class="control-label">Client ID</label>
                            <input asp-for="Id" class="form-control" placeholder="Enter Client ID" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Get Purchase Details" class="btn btn-primary btn-lg btn-block" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
