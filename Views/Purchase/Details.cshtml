@model CarAgency.Models.purchase

@{
    ViewData["Title"] = "Purchase Details";
}

<div class="container my-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-5 mx-auto">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="mb-4">
                        <h4 class="text-primary fs-2">Car Information</h4>
                        <ul class="list-unstyled">
                            <li><strong>Car:</strong> @(Model.Car != null ? $"{Model.Car.Name} ({Model.Car.Model})" : "N/A")</li>
                            <li><strong>Price:</strong> @(Model.Car != null ? $"${Model.Car.Price}" : "N/A")</li>
                            <li><strong>Year:</strong> @(Model.Car != null ? Model.Car.Year.ToString() : "N/A")</li>
                            <li><strong>Color:</strong> @(Model.Car != null ? Model.Car.Color : "N/A")</li>
                        </ul>
                    </div>

                    <div class="mb-4">
                        <h4 class="text-primary fs-2">Client Information</h4>
                        <ul class="list-unstyled">
                            <li><strong>Client:</strong> @(Model.Client != null ? Model.Client.UserName : "N/A")</li>
                            <li><strong>Email:</strong> @(Model.Client != null ? Model.Client.Email : "N/A")</li>
                            <li><strong>Phone Number:</strong> @(Model.Client != null ? Model.Client.PhoneNumber : "N/A")</li>

                        </ul>
                    </div>

                    <div>
                        <h4 class="text-primary fs-2">Purchase Information</h4>
                        <ul class="list-unstyled">
                            <li><strong>Purchase Date:</strong> @(Model.Date != null ? Model.Date.ToShortDateString() : "N/A")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Purchase")" class="btn btn-outline-primary">Back to List</a>
    </div>
</div>
